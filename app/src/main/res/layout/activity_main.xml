<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.hackdevmentalists.mvppattern.View.MainActivity">

    <EditText
        android:layout_width="217dp"
        android:layout_height="44dp"
        android:inputType="textPersonName"
        android:hint="Header"
        android:ems="10"
        android:id="@+id/main_et_header"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="85dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/activity_main" />

    <TextView
        android:text="Modified Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_tv_header"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/activity_main"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toBottomOf="@+id/main_et_desc"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="149dp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main" />

    <TextView
        android:text="Modified Description"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:id="@+id/main_tv_desc"
        app:layout_constraintLeft_toLeftOf="@+id/main_tv_header"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/activity_main"
        android:layout_marginBottom="78dp"
        app:layout_constraintRight_toRightOf="@+id/main_tv_header" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Description"
        android:ems="10"
        android:id="@+id/main_et_desc"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/main_et_header"
        tools:layout_constraintLeft_creator="1" />

    <Button
        android:text="Modify"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:id="@+id/main_btn_modify"
        app:layout_constraintBottom_toTopOf="@+id/main_tv_header"
        app:layout_constraintRight_toRightOf="@+id/main_et_desc"
        android:layout_marginBottom="56dp"
        app:layout_constraintLeft_toLeftOf="@+id/main_et_desc" />
</android.support.constraint.ConstraintLayout>
